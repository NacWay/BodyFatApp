                android:background="@color/white"
                android:fontFamily="@font/noto_sans"
                android:text="@string/advice4"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:text="5. НЕ ЗАБЫВАЙТЕ ПРО ЛЕГКУЮ ФИЗИЧЕСКУЮ НАГРУЗКУ"
                android:textAlignment="gravity"
                android:textColor="@color/coolBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text12"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans"
                android:text="@string/advice5"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text13"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:text="6. ПЕЙТЕ ВОДУ И ХУДЕЙТЕ"
                android:textAlignment="gravity"
                android:textColor="@color/coolBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text14"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans"
                android:text="@string/advice6"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:text="7. ВАЖНО КАЖДОЕ ДВИЖЕНИЕ"
                android:textAlignment="gravity"
                android:textColor="@color/coolBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text16"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans"
                android:text="@string/advice7"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/text18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text17"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans_bold"
                android:text="8. ЕШЬТЕ МЕДЛЕННО"
                android:textAlignment="gravity"
                android:textColor="@color/coolBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text18"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@color/white"
                android:fontFamily="@font/noto_sans"
                android:text="@string/advice8"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>